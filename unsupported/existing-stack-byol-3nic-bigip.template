    },
    "Bigip1InternalInterface": {
      "Description": "Internal interface ID on BIG-IP",
      "Value": {
        "Ref": "Bigip1InternalInterface"
      }
    },
    "Bigip1InternalInterfacePrivateIp": {
      "Description": "Internally routable IP of internal interface on BIG-IP",
      "Value": {
        "Fn::GetAtt": [
